@model IEnumerable<HernandezITELEC1C.Models.Instructor>
@{
}
    <h1>Instructor List</h1>

    <table class="table table-dark">

        <tr>
            <th colspan="8">Instructor</th>
        </tr>

        <tr>
            <td>Id</td>
            <td>Name</td>
            <td>Is Tenured</td>
            <td>Rank</td>
            <td>Hiring Date</td>
            <td></td>
        <td></td>
        </tr>
        <tr>
            @foreach (var Instructor in Model)
            {
            <tr>
                <td>@Instructor.Id </td>
                <td>@Instructor.FirstName @Instructor.LastName </td>
                <td>@Instructor.IsTenured </td>
                <td>@Instructor.Rank </td>
                <td>@Instructor.DateHired </td>
            <td><a class="btn btn-primary" asp-action="ShowDetail" asp-route-id="@Instructor.Id">Show Details</a></td>
            <td><a class="btn btn-info" asp-action="UpdateInstructor" asp-route-id="@Instructor.Id">Update</a></td>
            <td><a class="btn btn-danger" asp-action="DeleteInstructor" asp-route-id="@Instructor.Id">Delete</a></td>
            </tr>
            }
    </table>
<a asp-action="AddInstructor" class="btn btn-primary">Add Instructor</a>
